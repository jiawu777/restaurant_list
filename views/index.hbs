<!-- search bar -->
<div class="container search-bar">
    <div class="search-bar-outer">
        <div class="search-bar-inner">
            <form action="/search">
                <h4 class="mb-2">尋找餐廳：</h4>
                <div class="input-group">
                    <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類"
                        aria-label="Restaurant Name..." value="" aria-describedby="search-button">
                    <div class="input-group-append">
                        <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i>
                        </button>
                        <!--修正點擊 ADD NEW RESTAURANT 時，要點文字才能新增餐廳，點文字外的按鈕區域範圍內，會跳 not found-->
                        <a class="btn btn-major mx-2" href="./restaurants/new" style="color:white;">ADD NEW
                            RESTAURANT
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- 查無資料訊息 -->
<div class="container mt-5">
    <h2 class="text-center"> {{noResultMessage}} </h2>
</div>

<!-- restaurant list -->
<div class="container mt-5">
    <div class="row">
        <div class="col-md-10 col-12 mx-auto">
            <div class="card-columns">
                {{#each restaurants}}
                <a href="/restaurants/{{this._id}}" class="text-secondary">
                    <div class="card mb-3">
                        <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
                        <div class="card-body p-3">
                            <h6 class="card-title mb-1">{{this.name}}</h6>

                            <div class="restaurant-category mb-1">
                                <i class="fas fa-utensils pr-2"></i> {{this.category}}
                            </div>

                            <div class="d-flex justify-content-between">
                                <div class="me-auto">
                                    <span class="badge badge-pill badge-danger font-weight-normal me-auto p-2">
                                        {{this.rating}}
                                        <i class="fas fa-star fa-xs"></i>
                                    </span>
                                </div>
                                <div class="d-flex align-items-start" role="group" aria-label="Basic outlined example">
                                    <a href="./restaurants/{{this._id}}" class="btn btn-outline-info btn-sm">Detail</a>
                                    <a href="./restaurants/{{this._id}}/edit"
                                        class="btn btn-outline-success mx-1 btn-sm">Edit</a>
                                    <form action="./restaurants/{{this._id}}/delete" method="post">
                                        <button type="submit" class="btn btn-outline-danger btn-sm">Delete</button>
                                    </form>
                                </div>
                            </div>
                            <span>

                            </span>
                        </div>
                    </div>
                </a>
                {{/each}}
            </div>
        </div>
    </div>
</div>