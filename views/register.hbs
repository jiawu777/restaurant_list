<div class="container mt-5 d-grid gap-2 col-6 mx-auto">
    {{> message}}
    <form action="/users/register" method="POST">
        <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input name="name" type="name" class="form-control" id="name" placeholder="Root" value="{{name}}">
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email address</label>
            <input name="email" type="email" class="form-control" id="email" placeholder="abc@example.com"
                value="{{email}}">
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input name="password" type="password" class="form-control" id="password" placeholder="password"
                value="{{password}}">
        </div>
        <div class="mb-3">
            <label for="confirmPassword" class="form-label">Confirm Password</label>
            <input name="confirmPassword" type="password" class="form-control" id="confirmPassword"
                placeholder="password" value="{{confirmPassword}}">
        </div>
        <div class="mt-3 d-grid gap-2">
            <button type="submit" class="btn btn-success btn-block ">Register</button>
            <a href="/auth/facebook" class="btn btn-info btn-block ">FaceBook Login</a>
        </div>

    </form>
    <div class="d-flex">
        <h5>Got An Account? </h5><a href="/users/login">
            <h5 class="mx-3">Login Right Now!</h5>
        </a>
    </div>


</div>